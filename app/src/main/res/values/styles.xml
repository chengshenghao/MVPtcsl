<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Base_Dialog_Bottom_Btn_Style">
        <item name="android:layout_width">@dimen/base_dialog_bottom_btn_width</item>
        <item name="android:layout_height">@dimen/base_dialog_bottom_btn_height</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>
</resources>
